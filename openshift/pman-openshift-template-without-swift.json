{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "pman-openshift",
    "annotations": {
      "description": "Creates pman on OpenShift",
      "tags": ""
    }
  },
  "objects": [{
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "generation": 1,
        "labels": {
          "app": "pman"
        },
        "name": "pman"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "pman",
          "deploymentconfig": "pman"
        },
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {

            "labels": {
              "app": "pman",
              "deploymentconfig": "pman"
            }
          },
          "spec": {
            "containers": [{
              "command": [
                "/usr/local/bin/pman",
                "--rawmode=1",
                "--http",
                "--port=5010",
                "--listeners=12",
                "--container-env=openshift"
              ],
              "volumeMounts": [{
                  "name": "kubecfg-volume",
                  "mountPath": "/tmp/.kube/",
                  "readOnly": true
                },
                {
                  "name": "localvol",
                  "mountPath": "/shareDir"
                }
              ],
              "image": "172.30.1.1:5000/myproject/pman",
              "imagePullPolicy": "Always",
              "name": "pman",
              "ports": [{
                "containerPort": 5010,
                "protocol": "TCP"
              }],
              "resources": {
                "limits": {
                  "memory": "1024Mi",
                  "cpu": "2000m"
                },
                "requests": {
                  "memory": "128Mi",
                  "cpu": "250m"
                }
              },
              "terminationMessagePath": "/dev/termination-log",
              "env": [{
                  "name": "KUBECFG_PATH",
                  "value": "/tmp/.kube/config"
                },
                {
                  "name": "OPENSHIFTMGR_PROJECT",
                  "value": "radiology"
                },
                {
                  "name": "STORAGE_TYPE",
                  "value": "hostPath"
                }
              ]
            }],
            "volumes": [{
                "name": "kubecfg-volume",
                "secret": {
                  "secretName": "kubecfg"
                }
              },
              {
                "name": "localvol",
                "hostPath": {
                  "path": "/tmp/share"
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [{
          "type": "ConfigChange"
        }]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app": "pman"
        },
        "name": "pman"
      },
      "spec": {
        "ports": [{
          "name": "5010-tcp",
          "port": 5010,
          "protocol": "TCP",
          "targetPort": 5010
        }],
        "selector": {
          "app": "pman",
          "deploymentconfig": "pman"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "annotations": {
          "openshift.io/host.generated": "true"
        },
        "name": "pman"
      },
      "spec": {
        "port": {
          "targetPort": "5010-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "pman",
          "weight": 100
        }
      }
    }
  ],
  "labels": {
    "template": "application-template-pman-openshift"
  }
}
