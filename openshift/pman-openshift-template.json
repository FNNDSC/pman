{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "pman-openshift",
    "annotations": {
      "description": "Creates pman on OpenShift",
      "tags": ""
    }
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "generation": 1,
        "labels": {
          "app": "pman"
        },
        "name": "pman"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "pman",
          "deploymentconfig": "pman"
        },
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "pman",
              "deploymentconfig": "pman"
            }
          },
          "spec": {
            "containers": [{
              "command": [
                "/usr/local/bin/pman",
                "--rawmode=1",
                "--http",
                "--port=5010",
                "--listeners=12",
                "--container-env=openshift",
                "--enableTokenAuth",
                "--tokenPath=/etc/pman/auth/pman_config.cfg"
              ],
              "volumeMounts": [{
                  "name": "kubecfg-volume",
                  "mountPath": "/tmp/.kube/",
                  "readOnly": true
                },
                {
                  "name": "swift-credentials",
                  "mountPath": "/etc/swift/",
                  "readOnly": true
                },
                {
                  "name": "pman-config",
                  "mountPath": "/etc/pman/auth",
                  "readOnly": true
                }
              ],
              "image": "fnndsc/pman",
              "imagePullPolicy": "Always",
              "name": "pman",
              "ports": [{
                "containerPort": 5010,
                "protocol": "TCP"
              }],
              "resources": {
                "limits": {
                  "memory": "1024Mi",
                  "cpu": "2000m"
                },
                "requests": {
                  "memory": "150Mi",
                  "cpu": "250m"
                }
              },
              "terminationMessagePath": "/dev/termination-log",
              "env": [{
                  "name": "KUBECFG_PATH",
                  "value": "/tmp/.kube/config"
                },
                {
                  "name": "OPENSHIFTMGR_PROJECT",
                  "value": "radiology"
                },
                {
                  "name": "STORAGE_TYPE",
                  "value": "swift"
                }
              ]
            }],
            "volumes": [{
                "name": "kubecfg-volume",
                "secret": {
                  "secretName": "kubecfg"
                }
              },
              {
                "name": "swift-credentials",
                "secret": {
                  "secretName": "swift-credentials"
                }
              },
              {
                "name": "pman-config",
                "secret": {
                  "secretName": "pman-config"
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [{
          "type": "ConfigChange"
        }]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app": "pman"
        },
        "name": "pman"
      },
      "spec": {
        "ports": [{
          "name": "5010-tcp",
          "port": 5010,
          "protocol": "TCP",
          "targetPort": 5010
        }],
        "selector": {
          "app": "pman",
          "deploymentconfig": "pman"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "annotations": {
          "openshift.io/host.generated": "true"
        },
        "name": "pman"
      },
      "spec": {
        "port": {
          "targetPort": "5010-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "pman",
          "weight": 100
        }
      }
    },
    {
      "apiVersion": "batch/v1beta1",
      "kind": "CronJob",
      "metadata":{
        "labels":{
          "job-origin":"pman"
      },
          "name": "pman-reaper"
      },
      "spec":{
          "schedule": "*/30 * * * ?",    
          "jobTemplate":{
              "spec":{
                "activeDeadlineSeconds" : 1200,
                  "template":{
                    "metadata":{
                      "labels":{
                        "job-origin": "pman-reaper"
                      },
                      "name": "pman-reaper"
                    },
                      "spec":{
                          "containers":[{
                                  "name": "pman-reaper",
                                  "image": "fnndsc/pman-reaper",
                                  "imagePullPolicy": "Always",
                                  "command": ["python3", "reaper.py"],
                                  "env": [{
                                    "name": "KUBECFG_PATH",
                                    "value": "/tmp/.kube/config"
                                  },
                                  {
                                    "name": "OPENSHIFTMGR_PROJECT",
                                    "value": "radiology"
                                  }],
                                  "volumeMounts": [{
                                    "name": "kubecfg-volume",
                                    "mountPath": "/tmp/.kube/",
                                    "readOnly": true
                                  }]
                              }],
                          "volumes": [{
                            "name": "kubecfg-volume",
                            "secret": {
                              "secretName": "kubecfg"
                            }
                          }],
                          "restartPolicy": "Never"
                      }
                  }
              }
          }             
      }
  }
],
  "labels": {
    "template": "application-template-pman-openshift"
  }
}
